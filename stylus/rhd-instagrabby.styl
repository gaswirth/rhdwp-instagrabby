/* ==========================================================================
	Instagrabby
   ========================================================================== */

// Functions
transition( $val )
	-webkit-transition $val
	transition $val


opacity( $val )
	-webkit-opacity $val
	-moz-opacity $val
	opacity $val


border-radius( $val )
	-webkit-border-radius $val
	-moz-border-radius $val
	border-radius $val


.rhd-instagrabby-container
	width 100%
	position relative

	&:hover
		.rhd-instagrabby-pager
			opacity 1

	.rhd-instagrabby
		width 100%
		height auto
		position relative
		overflow hidden
		list-style none
		padding 0
		margin 0
		text-align left

		li
			display inline-block

		.rhd-instagrabby-icon
			img
				width auto
				height auto


.rhd-instagrabby-pager
	display none


.desktop
	.rhd-instagrabby-pager
		width 10%
		height auto
		display block
		opacity 0
		padding 0.375rem 0.5rem 0.375rem 0.25rem
		position absolute
		top 50%
		transform translateY( -50% )
		z-index 200
		border-radius 50%
		background-color rgba(255,255,255,0.1)
		transition(all 0.25s ease)

		&:hover
			background-color rgba(255,255,255,0.2)

		img
			width 100%
			height auto
			display block

	.cycle-prev
		left 1%

	.cycle-next
		right 1%

	.disabled
		visibility hidden